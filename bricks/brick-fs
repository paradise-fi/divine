    inline void renameIfExists( std::string src, std::string dst )
    {
        int res = ::rename( src.c_str(), dst.c_str() );
        if ( res < 0 && errno != ENOENT )
            brq::raise< std::system_error >() << "moving " << src << " to " << dst;
    }

    inline void unlink( std::string fname )
    {
#ifdef _WIN32
        if ( ::_unlink( fname.c_str() ) < 0 )
            brq::raise< std::system_error >() << "cannot delete file" << fname;
#else
        if ( ::unlink( fname.c_str() ) < 0 )
            brq::raise< std::system_error >() << "cannot delete file" << fname;
#endif
    }

    inline void symlink( std::string a, std::string b )
    {
        if ( ::symlink( a.c_str(), b.c_str() ) < 0 )
            brq::raise< system_error >() << "cannot create symlink from " << a << " to " << b;
    }

    inline void rmdir( std::string dirname ) {
#ifdef _WIN32
        if ( ::_rmdir( dirname.c_str() ) < 0 )
            brq::raise< std::system_error >() << "cannot delete directory " << dirname;
#else
        if ( ::rmdir( dirname.c_str() ) < 0 )
            brq::raise< std::system_error >() << "cannot delete directory " << dirname;
#endif
    }

    inline bool deleteIfExists( std::string file )
    {
#ifdef _WIN32
        int r = ::_unlink( file.c_str() );
#else
        int r = ::unlink( file.c_str() );
#endif
        if ( r != 0 )
        {
            if ( errno != ENOENT )
                brq::raise< std::system_error >() << "cannot delete file" << file;

            return false;
        } else
            return true;
    }
}

